<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <report
            id="action_report_ticket_flight"
            model="ticket.flight"
            string="Boleto"
            report_type="qweb-pdf"
            name="Airlines.report_ticket_qweb"
            file="Airlines.report_ticket_qweb"
        />

        <record id="paperformat_ticket" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">4</field>
            <field name="margin_bottom">4</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        
        <record id="action_report_ticket_flight" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="Airlines.paperformat_ticket"/>
        </record>
        

        <template id="report_ticket_qweb">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- <t t-call="Airlines.header_report_ticket"> -->
                        <div class="header">
                            <h1>hello world</h1>
                        </div>
                        <div class="page">
                            <div class="oe_structure">
                                <span t-field="o.flight_id"/>
                            </div>
                        </div>
                    <!-- </t> -->
                </t>
            </t>
        </template>

    </data>
</odoo>